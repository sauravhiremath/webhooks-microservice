{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": false,
    "outDir": "./build",
    "pretty": true,
    "types": ["jest", "node"],
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": ["node_modules", "build", "coverage"]
}
