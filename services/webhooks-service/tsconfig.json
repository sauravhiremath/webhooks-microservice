{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext.Array", "ES2019"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitAny": false,
    "outDir": "./build",
    "pretty": true,
    "types": ["jest", "node"],
    "sourceMap": false,
    "target": "es6"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json",
    "./src/**/*.d.ts",
    "./mixins/db.mixin.ts"
  ],
  "exclude": ["node_modules", "test", "coverage", "data", "./src/**/*.spec.ts"]
}
